    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Proin convallis, diam ut aliquam ultrices, eros enim efficitur sapien, vel molestie ante orci ac diam. Phasellus eget molestie mi. Vestibulum placerat ipsum at arcu imperdiet, sed mollis augue eleifend" />
